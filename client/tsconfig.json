{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@tla/shared": ["../shared/src"],
      "@tla/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src", "vite.config.ts"],
  "references": [
    { "path": "../shared" }
  ]
}
